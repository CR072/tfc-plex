<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* Add some basic styling for the loading icon */
        #loadingIcon {
            width: 308px; /* Adjust the width as needed */
            height: 308px; /* Adjust the height as needed */
            animation: pulse 1.5s ease-in-out infinite; /* Apply pulsating animation */
            position: fixed;
            top: 30%;
            left: 45%;
            transform: translate(-50%, -50%);
            z-index: 100;
            transition: opacity 1s ease;
        }

        .loadingbackground {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(11, 11, 15); /* Adjust the transparency as needed */
            z-index: 99;
            transition: opacity 1s ease;

        }

        @keyframes pulse {
            0% {
                transform: scale(1);
                opacity: 1;
            }
            50% {
                transform: scale(1.3);
                opacity: 0.5;
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        @media (max-width: 1000px) {
  #loadingIcon {
            top: 30%;
            left: 30%;
  }
}

    </style>
    <title>Loading Animation</title>
</head>
<body>

<div id="loadingBackground" class="loadingbackground"></div>
<img id="loadingIcon" src="<%= settings.icon %>" loading="eager" width="300px" alt="">

<script>
    // Preload the loading icon
    var icon = new Image();
    icon.src = "<%= settings.icon %>";

    // Show the loading icon and background on page load
    document.getElementById("loadingIcon").style.opacity = "1";
    document.getElementById("loadingBackground").style.opacity = "1";
    document.getElementById("loadingIcon").style.display = "block";
    document.getElementById("loadingBackground").style.display = "block";

    // Simulate loading time and hide the icon and background after a delay
    setTimeout(function() {
        document.getElementById("loadingIcon").style.opacity = "0";
        document.getElementById("loadingBackground").style.opacity = "0";
        document.getElementById("loadingIcon").style.display = "none";

        // Delay the hiding of the background
        setTimeout(function() {
            document.getElementById("loadingBackground").style.display = "none";
            document.getElementById("content").style.display = "block";
        }, 500); // Adjust the delay time as needed

    }, 100); // Adjust the delay time as needed

    // Handle beforeunload event
    window.addEventListener('beforeunload', function() {
        // Show the loading icon and background before the page unloads
        document.getElementById("loadingIcon").style.opacity = "1";
        document.getElementById("loadingBackground").style.opacity = "1";
        document.getElementById("loadingIcon").style.display = "block";
        document.getElementById("loadingBackground").style.display = "block";
    });
</script>

</body>
</html>
