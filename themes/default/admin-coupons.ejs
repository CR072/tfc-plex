<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <div class="container-scroller">
      <%- include('./components/adminsidebar') %>
      <div class="container-fluid page-body-wrapper">
        <%- include('./components/topnav') %>
        <div class="main-panel">
          <div style="background-color: #111319" class="content-wrapper">
           <h2>Coupons</h2>
           <p class="text-gray">Create and revoke coupons.</p>
            <div class="row">
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Create a coupon</h4>
                                    <form action="/create_coupon">
                                        <label for="code">Code</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" name="code" placeholder="Put nothing here to generate a random code"><br><br>
                                        <label for="coins">Coins</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" name="coins" type="number"><br><br>
                                        <label for="ram">RAM</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" name="ram" type="number"><br><br>
                                        <label for="disk">Disk</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" name="disk" type="number"><br><br>
                                        <label for="cpu">CPU</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" name="cpu" type="number"><br><br>
                                        <label for="servers">Servers</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" name="servers" type="number"><br><br>
                                        <button class="btn btn-primary" type="submit">Complete</button>
                                    </form>
                  </div>
                </div>
              </div>
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Revoke coupon</h4>
                                   <form action="/revoke_coupon">
                                        <label for="code">Code</label>
                                        <input style="border-radius: 15px; padding: 8px;" class="form-control" name="code"><br><br>
                                        <button class="btn btn-primary" type="submit">Complete</button>
                                    </form>
                  </div>
                </div>
              </div>
          </div></div>
          <%- include('./components/footer') %>
        </div>
      </div>
    </div>
    <script src="/assets/vendors/select2/select2.min.js"></script>
    <script src="/assets/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <%- include('./components/scripts') %>
    <script src="/assets/js/file-upload.js"></script>
    <script src="/assets/js/typeahead.js"></script>
    <script src="/assets/js/select2.js"></script>
  </body>
</html>
