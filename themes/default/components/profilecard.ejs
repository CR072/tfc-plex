<style>
    .banner {
        background-image: url(/cdn/banner.png);
        background-size: cover;
        height: 125px;
        border-radius: 5px 5px 0 0;
    }

    .profile-info {
        padding: 20px;
    }

    .avatar-container {
        position: relative;
        margin: -75px auto 10px;
        margin-right: 200px;
    }

    .avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;

        object-fit: cover;
        margin-right: 3px;
        margin-bottom: 3px;

    }

    .online-dot {
        position: absolute;
        bottom: 5px;
        right: 5px;
        width: 25px;
        height: 25px;

        background-color: #4caf50;
        border-radius: 50%;
        border: 4px solid #101115;
    }

    .badge-container {
        display: flex;
        align-items: flex-start;
        background: #000000;
        padding: 7px;
        border-radius: 5px;
    }

    .badge {
        position: relative;
        background-color: #ffca28;
        color: #000;
        padding: 5px;
        border-radius: 5px;
        margin-left: 5px;
    }

    .badge span {
        display: none;
        position: absolute;
        top: -30px;
        left: 50%;
        transform: translateX(-50%);
    }

    .badge:hover span {
        display: block;
        background: black;
        color: white;
        padding: 15px;
        border-radius: 5px;
        box-shadow: rgba(255, 255, 255, 0.58) 1px 1px 5px 0px;
        z-index: 1000;
        top: -47px;
    }
</style>


<div class="col-md-6 grid-margin stretch-card" style="max-width: 500px">
    <div class="card card-stretched" style="background: #101115; max-width: 500px">
        <div class="banner"></div>
        <div class="profile-info">
            <div class="d-flex align-items-center">
                <div class="avatar-container">
                    <img src="https://cdn.discordapp.com/avatars/<%= userinfo.id %>/<%= userinfo.avatar %>.png?size=256" alt="Avatar" class="avatar">
                    <div class="online-dot"></div>
                </div>
                <div>
                    <div class="badge-container">
                        <% if (pterodactyl.root_admin==true) { %>
                            <span class="badge badge-danger bg-danger"><i class="fas fa-crown"></i><span> admin of <%= settings.name %></span></span>
                        <% } else { %>
                            <span class="badge"><i class="fa-solid fa-user"></i><span> user of <%= settings.name %></span></span>
                        <% } %>
                            <% if (userinfo.id=="873121310950191155" ) { %> <span class="badge badge-danger bg-primary"><i class="fa-solid fa-treasure-chest"></i><span>Creator of TFC-Plex</span></span>
                            <% } %>
                        <span class="badge"><i class="fa-solid fa-tree-christmas"></i><span> Christmas Event 2023</span></span>


                            <span class="badge"><i class="fa-solid fa-champagne-glasses"></i><span> New Year Event 2023/24</span></span>
                    </div>
                    <div class="mt-4" style=" left: 50px; position: absolute">
                        <h2><%= userinfo.username %></h2>
                        <hr class="bg-white">
                        <h4>Over Me:</h4>
                        <h6 class="font-weight-lighter fs-1"> <%= userinfo.aboutMe || 'No information available.' %></h6><h6 class="font-weight-lighter fs-1">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
